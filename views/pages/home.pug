extends ../template.pug

block variables
  - var template = 'home'

block content
  .home 
    .home__wrapper
      .home__titles
        each collection, index in collections 
          .home__titles__label= `${home.data.collection} ${index==0 ? 'One': index==1 ? 'Two':index== 2?'Three': index==3? 'Four': '' }`
          .home__titles__title=collection.data.title 
      .home__gallery
        each media in home.data.gallery 
          figure.home__gallery__media 
            img.home__gallery__media__image(data-src=media.image.url, alt=media.image.alt)
      a.home__link(href='/collections')=home.data.button
        svg.home__link__icon(xmlns='http://www.w3.org/2000/svg'   viewbox='0 0 288 60'  )
          path(stroke="currentColor" fill='none' d='M144,0.5c79.3,0,143.5,13.2,143.5,29.5S223.3,59.5,144,59.5S0.5,46.3,0.5,30S64.7,0.5,144,0.5z')

