extends ../template.pug
block variables
	- var template = 'detail'

block content 
	.detail
		.detail__wrapper
			figure.detail__media
				img.detail__media__image(alt=product.data.image.alt src=product.data.image.url)

			.detail__information 
				p.detail__information__collection=product.data.collection.data.title
				h1.detail__information__title=product.data.title 

				.detail__information__content
					.detail__information__highlights
						each highlight in product.data.highlights 
							p.detail__information__highlight 
								if highlight.highlights_icon.toLowerCase() == 'arrow'
									svg.detail__information__highlight__icon(data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 40 40')
										path(fill='none' stroke='currentColor' data-name='Group 960' d='M180.7,15.71,192,4.4M176.1,20.31l.66-2.36.05-2.59,1.93,2.31,2.31,1.93-2.59,0ZM196.61-.2,196,2.16l0,2.59L194,2.44,191.66.51l2.59,0Zm-10.76-9a19.5,19.5,0,1,1-19.5,19.5A19.5,19.5,0,0,1,185.85-9.25Z' transform='translate(-165.85 9.75)')
								else 
									svg.detail__information__highlight__icon(data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 40 40')
										path(fill='none' stroke='currentColor' data-name='Group 953' d='M-164.13-183.12l-2.75,8.6,8.72-2.64-8.16,4.14,8.15,4.26-8.71-2.82,2.82,8.91-4.27-8.34-4.13,8.15,2.63-8.72-8.6,2.76,8.16-4.2-8.35-4.33,8.78,2.82-2.82-8.78,4.33,8.34Zm-4.26-9.37a19.5,19.5,0,0,1,19.5,19.5,19.5,19.5,0,0,1-19.5,19.5,19.5,19.5,0,0,1-19.5-19.5A19.5,19.5,0,0,1-168.39-192.49Z' transform='translate(188.39 192.99)')

								span.detail__information__highlight__text!=highlight.highlights_text.replace(/\n/, '<br>')

					.detail__information__list
						each item in product.data.informations
							p.detail__information__item 
								strong.detail__information__item__title=item.informations_label
								span.detail__information__item__description=item.informations_text 

					a.detail__information__link(href=product.data.link_url.url target='_blank')=product.data.link_text
	button.detail__button Close
		svg.detail__button__icon(data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 125 61')
			path(fill='none' stroke='currentColor' d='M62,.5c34,0,61.5,13.21,61.5,29.5S96,59.5,62,59.5.5,46.29.5,30,28,.5,62,.5ZM62,0c34.24,0,62,13.43,62,30S96.24,60,62,60,0,46.57,0,30,27.76,0,62,0Z' transform='translate(0.5 0.5)')